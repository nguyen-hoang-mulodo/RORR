<%= form_for :blog, :url => uri("/blogs/edit/#{@blog.id}") do |f| %>

<% if @error != nil
  lb = nil
%>
<% @error.each do |label,val|
    if lb != label
      lb = label
%>


  <p>
    <span id="errmsg"><%= label %> : <%= val.inspect %></span>
  </p>
<%  end %>
<% end %>
<% end %>

  <p>
    <%= f.label :id %> : <%= @blog.id %><br>
  </p>

  <p>
    <%= f.label :title %> *<br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %> *<br>
    <%= f.cktext_area :content, :ckeditor => {:uiColor => "#AADC6E", :toolbar => "mini"} %>
  </p>

  <br />
  <p>
    <%= f.submit %>
  </p>
<% end %>

