<%= form_for :blog, :url => uri("/blogs/new") do |f| %>
<% if @error != nil
  lb = nil
%>
<% @error.each do |label,val|
    if lb != label
      lb = label
%>
  <p>
    <span id="errmsg"><%= label %> : <%= val.inspect %></span>
  </p>
<%  end %>
<% end %>
<% end %>

  <p>
    <%= f.label :title %> *<br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %> *<br>
    <%= f.text_area :content %>
  </p>

  <br />
  <p>
    <%= f.submit %>
  </p>
<% end %>

